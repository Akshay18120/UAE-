# Server Configuration
NODE_ENV=development
PORT=3000
WORKER_PORT=3001
CLIENT_URL=http://localhost:3000
API_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/procurement_pro
DB_HOST=localhost
DB_PORT=5432
DB_NAME=procurement_pro
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# Redis Configuration (for queues and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM_NAME="ProcurementPro"
EMAIL_FROM_ADDRESS=noreply@procurementpro.com

# File Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880 # 5MB

# Logging
LOG_LEVEL=info

# Feature Flags
FEATURE_EMAIL_VERIFICATION=true
FEATURE_RATE_LIMITING=true
FEATURE_MAINTENANCE_MODE=false
